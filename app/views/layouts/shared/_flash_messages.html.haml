  .alert.alert-success.fade.in
    %button.close{data: {dismiss: 'alert'}} x
    = flash[:success]
- unless flash[:warning].blank?
  .alert.alert-warning.fade.in
    %button.close{data: {dismiss: 'alert'}} x
    = flash[:warning]
- unless flash[:info].blank?
  .alert.alert-info.fade.in
    %button.close{data: {dismiss: 'alert'}} x
    = flash[:info]
- unless flash[:notice].blank?
  .alert.alert-success.fade.in
    %button.close{data: {dismiss: 'alert'}} x
    = flash[:notice]