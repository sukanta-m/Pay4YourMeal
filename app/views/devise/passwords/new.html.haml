.row
  .row
    .col-md-4.col-md-offset-4
      .panel.panel-login
        .panel-heading
          %h2 Forgot your password?
          %hr
            .panel-body
              .row
                .col-lg-12
                  = form_for(resource, as: resource_name, url: password_path(resource_name),
                              html: {id: '#login-form', method: :post, :style => "display: block;" }) do |f|
                    .form-group.input-group
                      %span.input-group-addon
                        %i.glyphicon.glyphicon-user
                      = f.email_field :email,class: "form-control", :placeholder => "Email", :tabindex => "1"
                      - if resource.errors.present? && resource.errors[:email].present?
                        .note.note-error
                          = resource.errors[:email].join(' and ')
                    .actions
                      = f.submit "Send me reset password instructions", class:'btn btn-primary'

