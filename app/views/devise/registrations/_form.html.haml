.row
  .row
    .col-md-4.col-md-offset-4
      .panel.panel-login
        .panel-heading
          .row
            .col-xs-6
              %a{:href => new_session_path(:user)} Login
            .col-xs-6
              %a{:href => new_registration_path(:user), class: 'active'} Register
          %hr
            .panel-body
              .row
                .col-lg-12
                  = form_for(resource, as: resource_name, url: registration_path(resource_name),
                                      html: {:id => "registrations_form", multipart: true, class: 'smart-form'}) do |f|
                    .form-group.input-group
                      %span.input-group-addon
                        %i.glyphicon.glyphicon-user
                      = f.text_field :first_name,class: "form-control", :placeholder => "First Name", :tabindex => "1"
                    .note-error
                      - if resource.errors.present? && resource.errors[:first_name].present?
                        = resource.errors[:first_name].join(' and ')
                    .form-group.input-group
                      %span.input-group-addon
                        %i.glyphicon.glyphicon-user
                      = f.text_field :last_name,class: "form-control", :placeholder => "Last Name", :tabindex => "2"
                    .note-error
                      - if resource.errors.present? && resource.errors[:last_name].present?
                        = resource.errors[:last_name].join(' and ')
                    .form-group.input-group
                      %span.input-group-addon
                        %i.glyphicon.glyphicon-user
                      = f.email_field :email,class: "form-control", :placeholder => "Email", :tabindex => "3"
                    .note-error
                      - if resource.errors.present? && resource.errors[:email].present?
                        = resource.errors[:email].join(' and ')
                    .form-group.input-group
                      %span.input-group-addon
                        %i.glyphicon.glyphicon-lock
                      = f.password_field :password,class: "form-control", :placeholder => "Password", :tabindex => "4"
                    .note-error
                      - if resource.errors.present? && resource.errors[:password].present?
                        = resource.errors[:password].join(' and ')
                    .form-group.input-group
                      %span.input-group-addon
                        %i.glyphicon.glyphicon-lock
                      = f.password_field :password_confirmation,class: "form-control", :placeholder => "Confirm Password",
                          :tabindex => "5"
                    .note-error
                      - if resource.errors.present? && resource.errors[:password_confirmation].present?
                        = resource.errors[:password_confirmation].join(' and ')
                    .form-group.input-group
                      %span.input-group-addon
                        %i.glyphicon.glyphicon-picture
                      = f.file_field :avatar,class: "form-control", :tabindex => "6"
                    .note-error
                      - if resource.errors.present? && resource.errors[:avatar_content_type].present?
                        = resource.errors[:avatar_content_type].join(' and ')

                    .form-group
                      .row
                        .col-sm-12
                          = f.submit 'Register Now',class: 'form-control btn btn-register', :tabindex => "7"