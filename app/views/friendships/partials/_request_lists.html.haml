
.arrow
%h3.popover-title{style: "padding-left: 7px;"}
  %b Requested friends list
%div{style: "padding-top: 0px; padding-bottom: 0px;"}
  #dfdgdfgdfg
    - if requested_users.present?
      - requested_users.each do |user|
        .col-md-12.requested-friends-image
          .col-md-2
            = image_tag get_user_image_path(user), class: "width-100"
          .col-md-7
            %span
              = user.full_name
          .col-md-3
            = button_tag "Accept", class: "btn btn-primary accept-friend-request",
                                 data: {href: friendship_path(user, :friend_id => user.id)}
    - else
      .alert.alert-info.fade.in
        No friend request

:javascript
  var App = function() {
      return {
          blockUI: function (el) {
              el.block({
                  message: '',
                  css: {
                      backgroundColor: 'none'
                  },
                  overlayCSS: {
                      backgroundColor: '#FFFFFF',
                      backgroundImage: "url('/assets/ajax-loader.gif')",
                      backgroundRepeat: 'no-repeat',
                      backgroundPosition: 'center',
                      opacity: 0.67
                  }
              });
          },
          unBlockUI: function (el) {
              el.unblock();
          }
      }
  }();
  $(function() {
    $('.accept-friend-request').on('click', function() {
      var v_url;
      App.blockUI($('#friendRequestDetailsPopOver'));
      v_url = $(this).attr('data-href');
      return $.ajax({
        url: v_url,
        type: 'PUT',
        success: function(res) {
          return App.unBlockUI($('#friendsTabsContainer'));
        },
        error: function(res) {
          return App.unBlockUI($('#friendsTabsContainer'));
        }
      });
    });
  });

